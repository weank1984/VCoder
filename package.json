    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.16",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
  }
