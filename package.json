{
  "name": "vcoder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "VSCode 智能编程助手插件 (支持 Claude Code / Codex CLI)",
  "author": "VCoder Team",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
