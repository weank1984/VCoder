{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
        "--disable-extensions"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js"
      ],
      "preLaunchTask": "prepare:plugin",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js.map"
      ]
    },
    {
      "name": "Run Extension (With Extensions)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js"
      ],
      "preLaunchTask": "prepare:plugin",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js.map"
      ]
    },
    {
      "name": "Run Webview",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
        "${workspaceFolder}/apps/vscode-extension/test-fixtures",
        "--disable-extensions"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/webview/dist/**/*.js"
      ],
      "preLaunchTask": "prepare:webview",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/webview/dist/**/*.js"
      ],
      "env": {
        "VSCODE_FORCE_USE_TURBO": "1"
      }
    },
    {
      "name": "Run Webview (With Extensions)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
        "${workspaceFolder}/apps/vscode-extension/test-fixtures"
      ],
      "outFiles": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/webview/dist/**/*.js"
      ],
      "preLaunchTask": "prepare:webview",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/vscode-extension/out/**/*.js",
        "${workspaceFolder}/apps/vscode-extension/webview/dist/**/*.js"
      ],
      "env": {
        "VSCODE_FORCE_USE_TURBO": "1"
      }
    },
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/server/dist/index.js",
      "preLaunchTask": "dev:server",
      "outFiles": [
        "${workspaceFolder}/packages/server/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true
    },
    {
      "name": "Debug Server (Current File)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/server/dist/index.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "dev:server",
      "outFiles": [
        "${workspaceFolder}/packages/server/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Run Tests (Extension)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run",
        "tests/extension"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Tests (Server)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run",
        "tests/server"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Tests (Shared)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run",
        "tests/shared"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Webview (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/vscode-extension/webview",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "name": "Debug Desktop App (Main Process)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "${workspaceFolder}/apps/desktop-shell/dist/main.js"
      ],
      "preLaunchTask": "build:app",
      "outFiles": [
        "${workspaceFolder}/apps/desktop-shell/dist/**/*.js",
        "${workspaceFolder}/packages/server/dist/**/*.js",
        "${workspaceFolder}/packages/shared/dist/**/*.js"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "env": {
        "VCODER_DEBUG_IPC": "1",
        "NODE_ENV": "development"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/desktop-shell/dist/**/*.js",
        "${workspaceFolder}/packages/server/dist/**/*.js",
        "${workspaceFolder}/packages/shared/dist/**/*.js"
      ]
    },
    {
      "name": "Debug Desktop App (Renderer)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/apps/desktop-shell/webview",
      "sourceMaps": true
    },
    {
      "name": "Run Tests (Desktop Shell)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run",
        "tests/desktop-shell"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": [
        "Run Extension",
        "Debug Server"
      ],
      "stopAll": true
    },
    {
      "name": "Extension + Server (Debug All)",
      "configurations": [
        "Run Extension",
        "Debug Server"
      ]
    },
    {
      "name": "Desktop App (Main + Renderer)",
      "configurations": [
        "Debug Desktop App (Main Process)",
        "Debug Desktop App (Renderer)"
      ],
      "stopAll": true
    }
  ]
}
