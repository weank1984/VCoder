{
    "name": "vcoder",
    "displayName": "V-Coder",
    "description": "VSCode 智能编程助手 (Claude Code / Codex CLI)",
    "version": "0.1.0",
    "publisher": "vcoder",
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages",
        "Machine Learning",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onView:vcoder.chatView"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vcoder",
                    "title": "V-Coder",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "vcoder": [
                {
                    "id": "vcoder.chatView",
                    "name": "Chat",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "vcoder.newChat",
                "title": "New Chat",
                "icon": "$(add)"
            },
            {
                "command": "vcoder.showHistory",
                "title": "History",
                "icon": "$(history)"
            },
            {
                "command": "vcoder.openSettings",
                "title": "Settings",
                "icon": "$(ellipsis)"
            },
            {
                "command": "vcoder.setApiKey",
                "title": "V-Coder: Set API Key"
            },
            {
                "command": "vcoder.restart",
                "title": "V-Coder: Restart Server"
            },
            {
                "command": "vcoder.showLogs",
                "title": "V-Coder: Show Logs"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "vcoder.newChat",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@1"
                },
                {
                    "command": "vcoder.showHistory",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@2"
                },
                {
                    "command": "vcoder.openSettings",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@3"
                }
            ]
        },
        "configuration": {
            "title": "V-Coder",
            "properties": {
                "vcoder.defaultModel": {
                    "type": "string",
                    "default": "claude-sonnet-4-20250514",
                    "enum": [
                        "claude-sonnet-4-20250514",
                        "claude-3-5-sonnet-20241022",
                        "claude-3-5-haiku-20241022",
                        "claude-3-opus-20240229"
                    ],
                    "description": "Default AI model"
                },
                "vcoder.trustMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Skip bash command confirmation"
                },
                "vcoder.mcpServers": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Display name for the MCP server"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to start the MCP server"
                            },
                            "args": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Arguments for the MCP server command"
                            },
                            "env": {
                                "type": "object",
                                "description": "Environment variables for the MCP server"
                            }
                        },
                        "required": ["name", "command"]
                    },
                    "description": "List of MCP (Model Context Protocol) servers for extended tool capabilities"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run package:server",
        "build": "tsc && npm --prefix webview run build",
        "package:server": "mkdir -p server && cp -r ../server/dist/* server/",
        "dev": "tsc --watch",
        "clean": "rm -rf out",
        "lint": "eslint src"
    },
    "dependencies": {
        "@vcoder/shared": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.3.0"
    }
}
