{
    "name": "vcoder",
    "displayName": "VCoder",
    "description": "VSCode 智能编程助手 (Claude Code / Codex CLI)",
    "version": "0.5.0",
    "publisher": "vcoder",
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages",
        "Machine Learning",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vcoder",
                    "title": "VCoder",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "vcoder": [
                {
                    "id": "vcoder.chatView",
                    "name": "Chat",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "vcoder.openChat",
                "title": "VCoder: Open Chat",
                "icon": {
                    "light": "resources/icon.svg",
                    "dark": "resources/icon.svg"
                }
            },
            {
                "command": "vcoder.newChat",
                "title": "New Chat",
                "icon": "$(add)"
            },
            {
                "command": "vcoder.showHistory",
                "title": "History",
                "icon": "$(history)"
            },
            {
                "command": "vcoder.openSettings",
                "title": "Settings",
                "icon": "$(ellipsis)"
            },
            {
                "command": "vcoder.setUiLanguage",
                "title": "Language",
                "icon": "$(globe)"
            },
            {
                "command": "vcoder.setApiKey",
                "title": "VCoder: Set API Key"
            },
            {
                "command": "vcoder.restart",
                "title": "VCoder: Restart Server"
            },
            {
                "command": "vcoder.showLogs",
                "title": "VCoder: Show Logs"
            },
            {
                "command": "vcoder.switchAgent",
                "title": "VCoder: Switch Agent"
            },
            {
                "command": "vcoder.exportLogs",
                "title": "VCoder: Export Session Logs"
            },
            {
                "command": "vcoder.exportSession",
                "title": "VCoder: Export Session"
            },
            {
                "command": "vcoder.importSession",
                "title": "VCoder: Import Session"
            },
            {
                "command": "vcoder.exportAuditLogs",
                "title": "VCoder: Export Audit Logs"
            },
            {
                "command": "vcoder.showAuditStats",
                "title": "VCoder: Show Audit Statistics"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "vcoder.openChat",
                    "when": "editorTextFocus",
                    "group": "navigation@1"
                }
            ],
            "view/title": [
                {
                    "command": "vcoder.newChat",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@1"
                },
                {
                    "command": "vcoder.showHistory",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@2"
                },
                {
                    "command": "vcoder.openSettings",
                    "when": "view == vcoder.chatView",
                    "group": "navigation@3"
                }
            ]
        },
        "configuration": {
            "title": "VCoder",
            "properties": {
                "vcoder.defaultModel": {
                    "type": "string",
                    "default": "claude-haiku-4-5-20251001",
                    "enum": [
                        "claude-haiku-4-5-20251001",
                        "claude-sonnet-4-5-20250929",
                        "glm-4.6"
                    ],
                    "description": "Default AI model"
                },
                "vcoder.permissionMode": {
                    "type": "string",
                    "enum": ["default", "plan", "acceptEdits", "bypassPermissions"],
                    "default": "default",
                    "description": "Permission mode for agent behavior: 'default' (normal permissions), 'plan' (plan-before-execute), 'acceptEdits' (auto-accept file edits), 'bypassPermissions' (skip all permissions, sandbox only)"
                },
                "vcoder.agentProfiles": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "description": "Unique profile ID"
                            },
                            "name": {
                                "type": "string",
                                "description": "Display name"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to start the ACP agent"
                            },
                            "args": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Command arguments"
                            },
                            "env": {
                                "type": "object",
                                "description": "Environment variables"
                            }
                        },
                        "required": [
                            "id",
                            "name",
                            "command"
                        ]
                    },
                    "description": "ACP agent profiles for multi-agent support"
                },
                "vcoder.mcpServers": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Display name for the MCP server"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "stdio",
                                    "http",
                                    "sse"
                                ],
                                "description": "MCP server transport type"
                            },
                            "url": {
                                "type": "string",
                                "description": "Server URL (for http/sse)"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to start the MCP server (for stdio)"
                            },
                            "args": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Arguments for the MCP server command (for stdio)"
                            },
                            "env": {
                                "type": "object",
                                "description": "Environment variables for the MCP server (for stdio)"
                            }
                        },
                        "required": [
                            "name",
                            "type"
                        ]
                    },
                    "description": "External MCP (Model Context Protocol) servers for extended tool capabilities. Supports stdio, http, and sse transports."
                },
                "vcoder.uiLanguage": {
                    "type": "string",
                    "default": "auto",
                    "enum": [
                        "auto",
                        "en-US",
                        "zh-CN"
                    ],
                    "description": "UI language (auto follows VS Code display language)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run package:server",
        "build": "tsc && pnpm -C webview build",
        "package:server": "pnpm -C ../server build && mkdir -p server && cp -r ../server/dist/* server/",
        "dev": "tsc --watch",
        "clean": "rm -rf out",
        "lint": "eslint src"
    },
    "dependencies": {
        "@agentclientprotocol/sdk": "^0.12.0",
        "@vcoder/shared": "workspace:*",
        "node-pty": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^3.7.1",
        "typescript": "^5.3.0"
    }
}
